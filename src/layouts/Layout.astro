---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Freelancer Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-black">
    <header class="bg-neo-yellow p-4 mb-8">
      <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Freelancer Blog</a>
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/blog" class="hover:underline">Blog</a></li>
          <li><a href="/about" class="hover:underline">About</a></li>
          <li><a href="/contact" class="hover:underline">Contact</a></li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto px-4">
      <slot />
    </main>
    <footer class="bg-neo-blue text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        &copy; 2023 Freelancer Blog. All rights reserved.
      </div>
    </footer>
    <script>
      window.addEventListener('error', function(event) {
        console.error('Caught error:', event.error);
        document.body.innerHTML += `<div style="color: red; padding: 20px;">Error: ${event.error.message}</div>`;
      });
    </script>
  </body>
</html>